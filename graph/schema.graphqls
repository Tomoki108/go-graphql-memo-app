# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Memo {
  id: ID!
  title: String!
  body: String!
  label: Label
}

type Label {
  id: ID!
  name: String!
}

type Query {
  labels: [Label!]!
}

input NewMemo {
  title: String!
  body: String!
}

type Mutation {
  createMemo(input: NewMemo!): Memo!
}
